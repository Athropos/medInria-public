#-----------------------------------------------------------------------------
#
# vtkINRIA3DConfig.cmake - vtkINRIA3D CMake configuration file for external projects.
#
# This file is configured by vtkINRIA3D and used by the UsevtkINRIA3D.cmake module
# to load vtkINRIA3D's settings for an external project.


# The vtkINRIA3D source tree.
SET(vtkINRIA3D_SOURCE_DIR "@vtkINRIA3D_SOURCE_DIR@")


# The vtkINRIA3D include file directories.
SET(vtkINRIA3D_INCLUDE_DIRS "@vtkINRIA3D_INCLUDE_DIRS_CONFIG@")


# The vtkINRIA3D library directories.
SET(vtkINRIA3D_LIBRARY_DIRS "@vtkINRIA3D_LIBRARY_DIRS_CONFIG@")


# The C and C++ flags added by vtkINRIA3D to the cmake-configured flags.
SET(vtkINRIA3D_REQUIRED_C_FLAGS   "@vtkINRIA3D_REQUIRED_C_FLAGS@")
SET(vtkINRIA3D_REQUIRED_CXX_FLAGS "@vtkINRIA3D_REQUIRED_CXX_FLAGS@")


# The vtkINRIA3D version number
SET(vtkINRIA3D_VERSION_MAJOR "@vtkINRIA3D_VERSION_MAJOR@")
SET(vtkINRIA3D_VERSION_MINOR "@vtkINRIA3D_VERSION_MINOR@")


# The location of the UsevtkINRIA3D.cmake file.
SET(vtkINRIA3D_USE_FILE "@vtkINRIA3D_USE_FILE@")


# The build settings file.
SET(vtkINRIA3D_BUILD_SETTINGS_FILE "@vtkINRIA3D_BUILD_SETTINGS_FILE@")


# Whether vtkINRIA3D was built with shared libraries.
SET(vtkINRIA3D_LIBS_STYLE       "@vtkINRIA3D_LIBS_STYLE@")
SET(wxWidgets_BUILD_SHARED_LIBS "@wxWidgets_BUILD_SHARED_LIBS@")
SET(ITK_LIBS_STYLE              "@ITK_LIBS_STYLE@")


# Examples were built
SET(vtkINRIA3D_BUILD_EXAMPLES "@vtkINRIA3D_BUILD_EXAMPLES@")

SET(CMAKE_MODULE_PATH ${CMAKE_MODULE_PATH} "${vtkINRIA3D_SOURCE_DIR}/CMakeModules")

# Some specific settings.
SET(VTK_DIR "@VTK_DIR@")
FIND_PACKAGE(VTK REQUIRED)
INCLUDE(${VTK_USE_FILE})

SET(vtkINRIA3D_USE_ITK "@vtkINRIA3D_USE_ITK@")
IF( vtkINRIA3D_USE_ITK )
  SET(ITK_DIR "@ITK_DIR@")
  FIND_PACKAGE(ITK)
  INCLUDE ("${USE_ITK_FILE}")
ENDIF( vtkINRIA3D_USE_ITK )

SET(vtkINRIA3D_USE_WXWINDOWS "@vtkINRIA3D_USE_WXWINDOWS@")
IF(vtkINRIA3D_USE_WXWINDOWS)
  IF( UNIX )
    SET(wxWidgets_CONFIG_EXECUTABLE "@wxWidgets_CONFIG_EXECUTABLE@")
  ENDIF( UNIX )
  IF( WIN32 )
    SET( wxWidgets_LIB_DIR  "@wxWidgets_LIB_DIR@")
    SET( wxWidgets_ROOT_DIR "@wxWidgets_ROOT_DIR@")
  ENDIF( WIN32 )
  SET(wxWidgets_USE_LIBS "@wxWidgets_USE_LIBS@")
  FIND_PACKAGE(wxWidgets2 REQUIRED)
  INCLUDE(${wxWidgets_USE_FILE})
ENDIF(vtkINRIA3D_USE_WXWINDOWS)

SET(vtkINRIA3D_USE_KWWIDGETS "@vtkINRIA3D_USE_KWWIDGETS@")
IF(vtkINRIA3D_USE_KWWIDGETS)
  SET(vtkINRIA3D_USE_KWWIDGETS_OLD_API "@vtkINRIA3D_USE_KWWIDGETS_OLD_API@")
  SET(KWWidgets_DIR "@KWWidgets_DIR@")
  FIND_PACKAGE(KWWidgets)
  INCLUDE(${KWWidgets_USE_FILE})
ENDIF(vtkINRIA3D_USE_KWWIDGETS)

SET(vtkINRIA3D_USE_HWSHADING "@vtkINRIA3D_USE_HWSHADING@")
SET(TCL_SUPPORT_LIBRARY_DIR  "@VTK_TCL_SUPPORT_LIBRARY_PATH@")
SET(TK_SUPPORT_LIBRARY_DIR   "@VTK_TK_SUPPORT_LIBRARY_PATH@")

SET(vtkINRIA3D_USE_SPHERICALHARMONICS "@vtkINRIA3D_USE_SPHERICALHARMONICS@")

